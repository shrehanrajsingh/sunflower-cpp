import 'socket' as s
import 'file' as file

a = s.Server ('localhost', 8000)

fun home (req)
    a = file ('../../tests/server_assets/home.html', 'r')
    r = a.read ()
    a.close ()

    return {
        'status': 200,
        'Content-Type': 'text/html',
        'body': r
    }

fun contact (req)
    return {
        'status': 200,
        'Content-Type': 'text/html',
        'body': '<h1>Contact</h1>'
    }

a.add_get ('/', home)
a.add_get ('/contact', contact)

a.serve ()